<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white" >

    <LinearLayout
        android:id="@+id/SignUpActivtiy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:src="@drawable/intro_bg" />

        <EditText
            android:id="@+id/reg_email_edittext"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_background_white"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:textColor="#FBC261"
            android:textColorHint="#FBC261" >
        </EditText>

        <EditText
            android:id="@+id/reg_password_edittext"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_background_white"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColor="#FBC261"
            android:textColorHint="#FBC261" >
        </EditText>

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:layout_weight="1" >

            <EditText
                android:id="@+id/reg_birthday_edittext"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/edittext_background_white"
                android:ems="10"
                android:enabled="false"
                android:hint="Birthday"
                android:inputType="date"
                android:paddingLeft="10dp"
                android:textColor="#FBC261"
                android:textColorHint="#FBC261" >
            </EditText>

            <View
                android:id="@+id/reg_birthday_edittext_invisible_click_watcher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/image_gen_male"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_male_selector" />

            <ImageView
                android:id="@+id/image_gen_female"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_female_selector" />
        </LinearLayout>

        <ImageView
            android:id="@+id/sign_up_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/happy_pictoliking_selector" />
    </LinearLayout>

</RelativeLayout>