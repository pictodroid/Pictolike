        android:id="@+id/layoutview"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/imageview_liking_status">

        </RelativeLayout>-->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/layoutview"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/home_image_backgnd"
        android:layout_above="@+id/imageview_liking_status">

        <TextView
            android:id="@+id/rel_time"
            android:text="5 minutes ago"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#FBC261"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/rel_dis"
            android:text="3 miles away"
            android:textColor="#FBC261"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_margin="10dp"
            android:layout_above="@+id/rel_time"
            android:id="@+id/imageview_home"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
             />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_report"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="6dp"
        android:background="@drawable/ic_shield" />

    <ImageView
        android:id="@+id/imageview_liking_status"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/btn_report"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_blank_star_2" />

</RelativeLayout>